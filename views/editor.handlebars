        <div id="result">
            <div id="toolbar">
                <pre class="question" id="question1">{{question1}}</pre>
                <p class="h-divider"></p>
                <p class="toolbar-text" id="language-name1">Language</p>
                <p id="run-button" class="toolbar-button">Run</p>
                <p id="timer-text1" class="toolbar-text">0:0:0</p>
                <p id="submit-button" class="toolbar-button">Submit</p>
                <img src="images/gear_loading.gif" style="width: 30px; height: 30px; vertical-align: middle; display: none" id="loading-image">
